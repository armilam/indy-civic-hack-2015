<div class="row">
  <div class="col-sm-12">
    <div class="thumbnail" style="float: right;">
      <%= image_tag("ps9.jpg", width: 200) %>
      <div class="caption">
        Current School: PS9
      </div>
    </div>
    <div class="page-header">
      <h1><%= @student.full_name %>
        <small>IPS ID: <%= @student.ips_id %></small>
      </h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <h2>Student Details</h2>
    <dl>
      <dt>First Name</dt>
      <dd><%= @student.first_name || "(none provided)" %></dd>
      <dt>Middle Name</dt>
      <dd><%= @student.middle_name || "(none provided)" %></dd>
      <dt>Last Name</dt>
      <dd><%= @student.last_name || "(none provided)" %></dd>
      <dt>Birthdate</dt>
      <dd><%= @student.birthdate || "(none provided)" %></dd>
      <dt>Address</dt>
      <dd><%= @student.address || "(none provided)" %></dd>
      <dt>Grade</dt>
      <dd><%= @student.grade || "(none provided)" %></dd>
    </dl>
  </div>

  <div class="col-sm-6">
    <h2>Applications</h2>
    <ul class="unstyled-list">
      <%= render @student.applications %>
    </ul>
    <p><%= link_to "Begin a New Application", new_student_application_path(@student), class: "btn btn-primary" %></p>
  </div>
</div>
