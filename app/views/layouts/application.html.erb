<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "myIPS Magnet/Choice Program Portal" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Rails Devise" %>">
    <%= stylesheet_link_tag 'application', media: 'all', data: { turbolinks_track: true } %>
    <%= javascript_include_tag 'application', data: { turbolinks_track: true } %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= content_for(:body_class) %>">
    <header>
      <%= render 'layouts/navigation' %>
    </header>
    <main role="main">
      <div class="container">
       <%= render 'layouts/messages' %>
       <%= yield %>
      </div>
    </main>
  </body>
</html>
